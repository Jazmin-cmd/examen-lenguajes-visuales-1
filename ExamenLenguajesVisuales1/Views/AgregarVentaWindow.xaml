<Window x:Class="ExamenLenguajesVisuales1.Views.AgregarVentaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Venta" Height="250" Width="350">
    <Grid Margin="10">
        <StackPanel>
            <Label>Fecha:</Label>
            <DatePicker SelectedDate="{Binding Fecha}" />

            <Label>Monto:</Label>
            <TextBox Text="{Binding Monto, UpdateSourceTrigger=PropertyChanged}" />

            <Button Content="Guardar" Command="{Binding GuardarCommand}" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>

