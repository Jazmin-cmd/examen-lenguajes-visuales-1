<Window x:Class="ExamenLenguajesVisuales1.Views.AddVendedorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Vendedor" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Nombre:" />
            <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Apellido:" />
            <TextBox Text="{Binding Apellido, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Email:" />
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Teléfono:" />
            <TextBox Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}" />

            <Button Content="Guardar" Command="{Binding GuardarCommand}" Margin="0,10,0,0" />
        </StackPanel>

    </Grid>
</Window>

