<Window x:Class="ExamenLenguajesVisuales1.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar sesión" Height="250" Width="350"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Nombre de usuario" Margin="0,0,0,5"/>
            <TextBox Width="200" Text="{Binding NombreUsuario, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Contraseña" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Iniciar sesión" Width="100" Click="IniciarSesion_Click" Margin="0,0,10,0"/>
                <Button Content="Registrarse" Width="100" Click="Registrarse_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>


